{% extends 'admin/baseAdmin.html.twig' %}

{% block body %}
<div class="carte-form">
<h1>Modifier la categories</h1>
    
        {{ form_start(form) }}
        {{ form_row(form.Title, {
        label:'Nom'
        }) }}
        {{ form_row(form.Description) }}
        {{ form_row(form.IsMenu, {
        label:'Fait partie d\'un menu'
        }) }}
            <button type="submit" class="btn btn-primary">Ajouter</button>
        {{ form_end(form) }}
    </div>

<div class="carte-product">
{% for category in categorys %}
    <h2>Produits de la categorie {{category.Title}}</h2>
{% endfor %}
    <a href="{{ path("admin-product-create") }}" type="button" class="btn btn-outline-success">Ajouter un produit</a>
        <table class="table table-striped-columns">        

            <thead> 
                <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Modifier</th>
                <th>Supprimer</th>
                </tr> 
            </thead>
            {% for product in products %}
            <tbody> 
                <tr>
                <td>{{product.Title}}</td>
                <td>{{product.description}}</td>
                <td>{{product.prices}}â‚¬</td>
                <td><a href="{{ path("admin-product-edit", {id:product.id}) }}" type="button" class="btn btn-outline-primary">Modifier</a></td>
                <td><a href="{{ path("admin-product-delete", {id:product.id}) }}" type="button" class="btn btn-outline-danger">Supprimer</a></td>
                </tr>
            {% endfor %}
            </tbody> 
        </table>
</div>

{% endblock %} 