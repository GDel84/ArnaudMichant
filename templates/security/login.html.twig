{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if user %}
        <div class="mb-3">
            Vous êtes connecté(e) comme {{ user.userIdentifier }},
        </div>
    {% endif %}
    <div class="carte-log">
        <h1 class="h3 mb-3 font-weight-normal">Se Connecter</h1>
        <div class="mb-3">
            <label for="inputEmail" class="form-label">E-mail:</label>
            <input class="form-control" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control-lg" autocomplete="email" required autofocus>
            <label for="inputPassword" class="form-label">Mot de passe:</label>
            <input class="form-control" type="password" name="password" id="inputPassword" class="form-control-lg" autocomplete="current-password" required>
    
            <input type="hidden" name="_csrf_token" 
               value="{{ csrf_token('authenticate') }}">
        </div>
        
    
        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html
    
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}
    
        <button class="wooden-button-log" type="submit">
            Connection
        </button>
    </div>
</form>
<div class="footerBlock">
{% include 'footer.html.twig' %}
</div>
{% endblock %}
