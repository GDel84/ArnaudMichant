{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="carte-log register">
    <h1>Inscription</h1>


    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.name, {
            label:'Nom:'
        }) }}
        {{ form_row(registrationForm.email, {
            label:'E-mail:'
        }) }}
        {{ form_row(registrationForm.mentionsAllergene, {
            label:'Vos allergenes:'
        }) }}
        {{ form_row(registrationForm.nbCouverts, {
            label:'Nombre de convives habituelles:'
            
        }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe:'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="wooden-button-log">Enregister</button>
    {{ form_end(registrationForm) }}
</div>
<div class="footerBlock">
{% include 'footer.html.twig' %}
</div>
{% endblock %}
